{
  "name": "@kristjan.esperanto/leaflet-language-selector",
  "version": "3.1.0",
  "description": "A language selector for Leaflet based maps.",
  "main": "src/leaflet.languageselector.js",
  "exports": {
    ".": {
      "import": "./src/leaflet.languageselector.js",
      "default": "./src/leaflet.languageselector.js"
    },
    "./style": "./src/leaflet.languageselector.css",
    "./flags": "./src/leaflet.languageselector-flags.css"
  },
  "files": [
    "src/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "images/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KristjanESPERANTO/Leaflet.LanguageSelector.git"
  },
  "author": "buche",
  "maintainers": [
    "Kristjan ESPERANTO <11781960+KristjanESPERANTO@users.noreply.github.com>"
  ],
  "license": "CC0-1.0",
  "keywords": [
    "leaflet",
    "plugin",
    "language",
    "i18n",
    "map",
    "control"
  ],
  "peerDependencies": {
    "leaflet": ">=2.0.0-alpha.1"
  },
  "bugs": {
    "url": "https://github.com/KristjanESPERANTO/Leaflet.LanguageSelector/issues"
  },
  "homepage": "https://kristjanesperanto.github.io/Leaflet.LanguageSelector/",
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "cspell": "^9.3.2",
    "eslint": "^9.39.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^61.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "scripts": {
    "lint": "eslint && prettier --check . && cspell lint --no-progress .",
    "lint:fix": "eslint --fix && prettier --write .",
    "spellcheck": "cspell --no-progress .",
    "test": "npm run lint",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "sideEffects": false,
  "type": "module"
}
